{
    "cSpell.words": [
        "affinitization",
        "affinitized",
        "affinitizing",
        "cpulist",
        "cpus",
        "Dataless",
        "foldhash",
        "Folo",
        "freelist",
        "heapless",
        "JOBOBJECT",
        "metas",
        "miri",
        "nanos",
        "nextest",
        "nonoverlapping",
        "pointee",
        "taskset",
        "withf"
    ],
    // The point here is to take "miri" out of the default set of features,
    // so not(miri) tests are not always greyed out.
    "rust-analyzer.cargo.cfgs": [
        "debug_assertions"
    ],
    "rust-analyzer.rustfmt.extraArgs": ["+nightly", "--config-path", "${workspaceFolder}/unstable-rustfmt.toml"],
    // Makes rust-analyzer and Cargo commands use separate target directories,
    // so they can be executed concurrently.
    "rust-analyzer.cargo.targetDir": true
}